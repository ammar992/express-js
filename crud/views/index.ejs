<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add New Students</h2>
      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" id="name" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="text" name="age" id="age" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" name="fees" id="fees" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Students</h2>
      <%# Show All Data %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% var i = 1 %>
            <% data.forEach(function(item){%>

                <tr>
                    <td><%= i++%></td>
                    <td><%= item.name %></td>
                    <td><%= item.age %></td>
                    <td><%= item.fees %></td>            
        
                    <td>
                      <form method="get" class="d-inline" action="/student/edit/<%= item._id%>">
                        <button class="btn" type="submit"><i class="fas fa-pen-square text-info"></i></button>
                    </form>
                    <form action="/student/delete/<%= item.id%>" method="post" class="d-inline">
                      <button class="btn" type="submit"><i class="fas fa-trash text-danger"></i></button>
                    </form>
                      
                    </td>
                  </tr>

            <%  })  %>
        
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
